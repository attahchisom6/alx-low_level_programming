#all builds ur execcutable
#variables:
#	CC: the compiler
#	SRC: my .c files
#	OBJ: .o files
#	NAME: name of the executable
#	RM: program to delete files
#	CFLAGS: MY Favorite compiler flags

CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f

all: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
